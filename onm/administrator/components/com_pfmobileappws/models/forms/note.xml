			required="false"
			label="Modified_user_id"
			description="modified_user_id_Desc"
			class="inputbox"
			size="40"/>						
								
						
		<field
			id="modified_time"
			name="modified_time"
			type="calendar"
			required="false"
			label="Modified_time"
			description="modified_time_Desc"
			class="inputbox"
			size="16"
			format="%Y-%m-%d %H-%M-%S"/>			
							
							
